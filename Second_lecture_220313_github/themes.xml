<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A02_Layout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    APPText : 텍스트관련해서 수정하고자하기에 이름을 이렇게 지음-->
    <!--아이템들 : textsize, textcolor-->
    <style name="APPText">
        <!--        아이템 추가. 꾸미고자하는 속성들(textsize라던가) 을 아이템에 넣어주면됨.-->
        <item name="android:textSize">15sp</item> <!-- 텍스트 사이즈는 단위가 sp임 -->
        <item name="android:textColor">@color/black</item> <!-- @color.r에서 가져옴-->
    </style>

    <!--    APPText를 상속 받음. 재정의도 가능함.-->
    <!--아이템들 : textSize, textStyle-->
    <style name="APPText.Large">   <!---->
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
        <!--bold : 두껍게 , italic : 기울어진 글씨체    | 를 씀으로 동시에 씀.-->
    </style>

</resources>