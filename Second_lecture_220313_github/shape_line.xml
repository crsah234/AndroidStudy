<?xml version="1.0" encoding="utf-8"?><!-- LinearLayout 테두리 꾸미기.-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle은 기본값임. 연습이라 넣음-->

    <!-- 테두리를 설정하기위해서는  속성 stroke를 넣어야함 color 와 width 굵기 설정함-->
    <!--empty tag : stroke열려잇는데 닫는태그가아님.-->
    <stroke
        android:width="1dp"
        android:color="#DA2828" />
    <!--모서리 둥글게 하고자 함 - >corners-->
    <!--    전체다 둥글수있을수도있고 원하는 부위 선택해서도 가능-->
    <corners
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp" />

</shape>